{
    "name": "plesk/api-php-lib",
    "type": "library",
    "description": "PHP object-oriented library for Plesk XML-RPC API",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Alexei Yuzhakov",
            "email": "sibprogrammer@gmail.com"
        },
        {
            "name": "Plesk",
            "email": "plesk-dev-leads@plesk.com"
        }
    ],
    "require": {
        "php": "^5.6 | ^7.0",
        "ext-curl": "*",
        "ext-xml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "test": "phpunit"
    },
    "autoload": {
        "psr-4": {
            "PleskX\\": "src/PleskX/"
        }
    },
    "autoload-dev": {
        "classmap": ["tests/"]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
